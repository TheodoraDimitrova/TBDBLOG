  <link rel='stylesheet' href='/stylesheets/style.css' />


</head>


<body>
 
   {{> navbar}} 
   {{#if errors }} 
      {{#each errors }}
      <div class="msg msg-error z-depth-3 scale-transition"> {{this.msg}} </div>
      {{/each}}
   {{/if}}
   
   {{#if message.success}}
        <div class="msg msg-info z-depth-3 scale-transition">{{{message.success}}}
           </div>
        {{/if}}
         {{#if message.error}}
        <div class="msg msg-error z-depth-3 scale-transition">{{{message.error}}} </div>
        {{/if}}
  {{{body}}} 
  {{> footer}}
 

<script>
  CKEDITOR.replaceAll('materialize-textarea');
