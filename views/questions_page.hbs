<h4>
    <div class="listBlock">
        <a href="/questions/" style="font-weight:bold">All questions</a> |
        <a href="/questions/answered">Answered</a> |
        <a href="/questions/unanswered">Not Answered</a> |
        <a href="/questions/create">Ask a question</a>
    </div>
</h4>
<center>
    <h3 class="teal-text">{{title}}</h3>
</center>
<div class="col-md-8">
    <div class="row">
        {{#each questions}}
        <div class="card blue-grey darken-2">
            <div class="post-date">
                {{date}}
            </div>
            <div class="card-content white-text ">
                <a href="/questions/show/{{_id}}">
                    <h4>{{title}}</h4>
                </a>
                <h6>{{category.title}}</h6>
                <p>{{created_at}} by {{author.name}} {{author.last}}</p>
            </div>
            <span class="post-comments-number">
                <i class="fa fa-comments"></i>
                <a href="/questions/show/{{_id}}">{{answers.length}}</a>
            </span>
        </div>
        {{/each}}
    </div>
</div>