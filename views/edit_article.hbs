<div class="row">
        {{#if errors }}
    {{#each errors }}
          <div class="msg msg-error z-depth-3 scale-transition"> {{this.msg}} </div>
    {{/each}}
{{/if}}
</div>

<div class="article_blocks">
    <form class="col s12" action="/articles/edit/{{article.id}}" method="POST">
        <div class="form-container">
            <h3 class="teal-text">{{title}}</h3>
            <div class="row">
                <div class="input-field col s12">
                    <input id="title" type="text" name="title" class="validate" value='{{article.title}}'>
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="title" type="text" name="subtitle" class="validate" value='{{article.subtitle}}'>
                    <label for="subtitle">Subtitle</label>
                </div>
            </div>
            <div class="row">
                <select class="browser-default" name="category">
                    {{#each categories}}
                     {{!-- {{#equal this._id article.category }} --}}
                        {{!-- <option value={{this._id}} class="selected">{{this.title}}</option>  --}}
                       {{!-- {{/equal}}  --}}
                      
                    <option value={{this._id}}>{{this.title}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <textarea id="context" class="materialize-textarea" name="content">{{article.content}}</textarea>
                    <label for="content">Content</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="author" type="text" name="author" class="validate" value={{article.author}}>
                    <label for="author">Author</label>
                </div>
            </div>
            <br>
            <center>
                <button class="btn waves-effect waves-light teal green" type="submit">Save</button>
                <a class="waves-effect waves-light btn" href="/manage/articles">Back</a>

                <a class="waves-effect waves-light btn red" id="article-delete" href="/manage/articles" art-id-data={{article._id}}>Delete</a>

            </center>
        </div>
    </form>
</div>