<div class="row">
    {{#if errors }} {{#each errors }}
    <div class="msg msg-error z-depth-3 scale-transition"> {{this.msg}} </div>
    {{/each}} {{/if}}
</div>
<div class="article_blocks">

<form class="col s12" action="/articles/add/{{article._id}}" method="POST">
    <div class="form-container">
        <h3 class="teal-text">{{title}}</h3>
        <div class="row">
            <div class="input-field col s12 ">
                <input id="title" type="text" name="title" class="validate" value={{article.title}}>
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                
                <input id="subtitle" type="text" name="subtitle" class="validate">
                <label for="subtitle">Subtitle</label>
            </div>
        </div>

        <label>Select Category</label>
        <div class="row">
            <select class="browser-default" name="category">
                {{#each categories}}
                <option value=""></option>
                <option value={{this._id}}>{{this.title}}</option>
                {{/each}}
            </select>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input id="author" type="text" name="author" class="validate">
                <label for="author">Author</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <p>Content</p>
                <textarea id="content" class="materialize-textarea" name="content"></textarea>
               
            </div>
           
        </div>

        <br>
        <center>
            <button class="btn waves-effect waves-light teal green" type="submit">Add</button>
            <a class="waves-effect waves-light btn " href="/manage/articles">Back</a>
        </center>
    </div>
</form>


</div>



